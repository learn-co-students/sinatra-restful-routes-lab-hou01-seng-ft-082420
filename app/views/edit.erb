<h1> Recipe Editor </h1>

<form method= "post" action="/recipes/<%=@recipe.id%>" >
<input type= "hidden" name="_method" value="patch">
<p>Update Name: <input type="text" name="name" placeholder = <%= @recipe.name %> ></p>
<p>Update Ingredients: <input type="text" name="ingredients" placeholder = <%= @recipe.ingredients %> >></p>
<p>Update Cook Time: <input type="text" name="cook_time" placeholder = <%= @recipe.cook_time %> ></p>
<input type="submit" id= "Submit">
</form>